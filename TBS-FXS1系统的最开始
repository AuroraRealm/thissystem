#include<bits/stdc++.h>
#include<windows.h>
#include<fstream>
using namespace std; 
//命令库：清屏：system("cls"); 
//等待：Sleep(); 
//声音：Beep(频率,时间); 
string s;
int main(){
	Sleep(5000);
	system("cls");
	Sleep(1);
	s="";
	Beep(550,400);
	Beep(605,400);
	Beep(660,400);
	Beep(715,400);
	Beep(770,400);
	s="loading......";
	for(int i=0; i<s.size(); i++)
	{
		cout<<s[i];
		Sleep(100);
	}
	Sleep(500);
	system("cls");
	s="本系统采用了终端操作系统，能有效的在多种情况↓运行，使用命令控制。请勿恶意使用这个操作系统，否则你的电脑将出现卡顿，运行慢等情况。严禁抄袭！！严禁抄袭！！！"; 
	cout << s << endl;
	Sleep(5000);
	puts("shut·············关机");
	while(1)
	{
		cout<<"Windows terminal OS(No DIR)>>>";
		cin>>s;
		if(s=="shut")
		{
			system("cls");
			break;
		}
		cout << s << "不是一个指令" << endl;
		Beep(750,100);
	}
	puts("MADE IN CHINA,BAIGEPING");
	puts("                       ");
	puts("Closeing·······");
	Sleep(1000);
	return 0;
}
